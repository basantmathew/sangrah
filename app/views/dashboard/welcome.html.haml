.container
  %h1.page-header
    Home
    %small / Welcome
    %h3 New Arrivals
    %hr
  - @items.each_slice(4) do |row|
    .row
      - row.each do |item|
        .col-md-3
          %h4
            = link_to item.name, item
          .row
            .col-xs-4
              = image_tag item.photo.select.url
            .col-xs-8
              = item.excerpt
    %hr

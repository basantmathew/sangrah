%h1.page-header
  Members
  %small / Index
.row
  .col-md-12
    .text-right
      = new_link Member do
        %button.btn.btn-success{type: "button"} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Membership
            %th Type
            %th.action-cell
        %tbody
          - @members.each do |member|
            %tr
              %td= member.id
              %td= member.code
              %td= member.name
              %td= member.membership.name
              %td= member.kind.titleize
              %td.action-cell
                = show_link member do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                %span.spacer
                = edit_link member do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12.text-right
    = paginate @members

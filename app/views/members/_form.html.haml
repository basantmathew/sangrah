= simple_form_for @master, defaults: {input_html: { class: "form-control" }}, html: { multipart: true } do |f|
  .row
    .col-md-12
      .text-right
        = render 'shared/masters/form_actions', f: f

  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        = f.input :code, autofocus: true
      .col-md-6
        = f.input :name
    .row
      .col-md-6
        = f.association :membership, input_html: { class: 'selectize' }
      .col-md-6
        = f.input :kind,                                |
          label: "Type",                                |
          collection: Settings.member.kinds,            |
          input_html: {class: "form-control selectize"} |
    .row
      .col-md-6
        = f.input :gender,                              |
          collection: Settings.member.genders,          |
          input_html: {class: "form-control selectize"} |
      .col-md-6
        = f.input :age_group,                           |
          collection: Settings.member.age_groups,       |
          input_html: {class: "form-control selectize"} |

    %hr
    %h4.form-section Address
    = f.simple_fields_for :address do |a|
      = render 'shared/addresses/form', f: a

    %hr

    %h4.form-section Photo
    .row
      .col-md-12
        = f.input :photo, as: :file, label: false, input_html: { capture: "camera" }

    %h4.form-section Notes
    .row
      .col-md-12
        = f.input :notes, label: false

  .form-actions
    = render 'shared/masters/form_actions', f: f

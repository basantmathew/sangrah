= simple_form_for @master, defaults: {input_html: { class: "form-control" }}, html: { multipart: true } do |f|
  .row
    .col-md-12
      .text-right
        = render 'shared/masters/form_actions', f: f

  = render 'shared/errors/messages', object: f.object

  .form-inputs
    .row
      .col-md-6
        = f.association :item, input_html: { class: 'selectize' }, autofocus: true
      .col-md-6
        = f.input :name, label: 'Accession No'
    .row
      .col-md-6
        = f.input :procured_date, as: :datepick
      .col-md-3
        = f.input :quantity
      .col-md-3
        = f.input :issuable, as: :select,               |
          input_html: {class: "form-control selectize"} |
    .row
      .col-md-6
        = f.input :quality,                             |
          collection: Settings.copy.qualities,          |
          include_blank: false,                         |
          input_html: {class: "form-control selectize"} |
      .col-md-6
        = f.input :status,                              |
          collection: Settings.copy.statuses,           |
          include_blank: false,                         |
          input_html: {class: "form-control selectize"} |

    %h4.form-section Photo
    .row
      .col-md-12
        = f.input :photo, as: :file, label: false, input_html: { capture: "camera" }
    .row
      .col-md-12
        = f.input :remote_photo_url, label: 'Or a URL to the photo'

    %h4.form-section Notes
    .row
      .col-md-12
        = f.input :notes, label: false

  .form-actions
    = render 'shared/masters/form_actions', f: f

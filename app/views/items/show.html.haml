%h1.page-header
  Items
  %small / View
.row
  .col-md-12
    .text-right
      = render 'shared/masters/show_actions'

    .row
      .col-md-6.text-center.pull-right
        .image-container
          = image_tag @master.photo.thumb.url
      .col-md-6
        .row
          .col-md-12
            = display_field @master.code, label: 'Code'
        .row
          .col-md-12
            = display_field @master.name, label: 'Name'
        .row
          .col-md-12
            = display_field @master.category.name, label: 'Category'
        .row
          .col-md-12
            = display_field @master.subject, label: 'Subject'
    .tabbable
      %ul.nav.nav-tabs
        %li.margin-10
        %li.active
          %a{href: '#tab_creators', data: {toggle: 'tab'}} Creators
      .tab-content
        #tab_contacts.tab-pane.active
          .row
            .col-md-12
              .table-responsive
                %table#item_creators.table.table-striped.table-hover.spreadsheet
                  %thead
                    %tr
                      %th #
                      %th Creator
                      %th Role
                  %tbody#item_creator_fields
                    - @master.item_creators.each_with_index do |item_creator, index|
                      %tr
                        %td= index + 1
                        %td= item_creator.creator.name
                        %td= item_creator.role.titleize
    .spaceholder
    .row
      .col-md-6
        = display_field @master.kind.titleize, label: 'Type'
      .col-md-6
        = display_field @master.format.titleize, label: 'Format'
    .row
      .col-md-6
        = display_field @master.publisher, label: 'Publisher'
      .col-md-6
        = display_field @master.published_date, label: 'Published Date'
    .row
      .col-md-6
        = display_field "#{@master.length} #{@master.length_uom.titleize}", label: 'Length'
      .col-md-6
        = display_field @master.language.titleize, label: 'Language'
    .row
      .col-md-6
        = display_field @master.isbn_10, label: 'ISBN(10)'
      .col-md-6
        = display_field @master.isbn_13, label: 'ISBN(13)'
    .row
      .col-md-6
        = display_field @master.rights.titleize, label: 'Rights'
      .col-md-6
        = display_field @master.rating, label: 'Rating'
    .row
      .col-md-12
        = display_field @master.tags, label: 'Tags'
    .row
      .col-md-12
        = display_field @master.excerpt, label: 'Excerpt'
    .row
      .col-md-12
        = display_field @master.notes, label: 'Notes'

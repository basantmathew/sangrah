%h1.page-header
  Items
  %small / View
.row
  .col-md-12
    %p#notice= notice
    .text-right
      = render 'shared/masters/show_actions'

    .row
      .col-md-6
        = display_field @master.code, label: 'Code'
      .col-md-6
        = display_field @master.name, label: 'Name'
    .row
      .col-md-6
        = display_field @master.category.name, label: 'Category'
      .col-md-6
        = display_field @master.subject, label: 'Subject'
    .row
      .col-md-6
        = display_field @master.creator.name, label: 'Author' if @master.creator
    .row
      .col-md-6
        = display_field @master.kind, label: 'Type'
      .col-md-6
        = display_field @master.format, label: 'Format'
    .row
      .col-md-6
        = display_field @master.publisher, label: 'Publisher'
      .col-md-6
        = display_field @master.published_date, label: 'Published Date'
    .row
      .col-md-6
        = display_field @master.pages, label: 'Pages'
      .col-md-6
        = display_field @master.language, label: 'Language'
    .row
      .col-md-6
        = display_field @master.isbn_10, label: 'ISBN(10)'
      .col-md-6
        = display_field @master.isbn_13, label: 'ISBN(13)'
    .row
      .col-md-6
        = display_field @master.rights, label: 'Rights'
      .col-md-6
        = display_field @master.rating, label: 'Rating'
    .row
      .col-md-12
        = display_field @master.tags, label: 'Tags'
    .row
      .col-md-12
        = display_field @master.excerpt, label: 'Excerpt'
    .row
      .col-md-12
        = display_field @master.notes, label: 'Notes'

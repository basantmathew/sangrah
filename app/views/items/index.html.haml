%h1.page-header
  Items
  %small / Index
.row
  .col-md-12
    .text-right
      = new_link Item do
        %button.btn.btn-success{type: 'button'} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Category
            %th Type
            %th Format
            %th.action-cell
        %tbody
          - @items.each do |item|
            %tr
              %td= item.id
              %td= item.code
              %td= item.name
              %td= item.category.name
              %td= item.kind.titleize
              %td= item.format.titleize
              %td.action-cell
                = show_link item do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                %span.spacer
                = edit_link item do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12.text-right
    = paginate @items
